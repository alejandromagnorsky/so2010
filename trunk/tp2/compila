cd ./bin
rm -rf *

CFLAGS="-fno-builtin -march=i386 -mtune=i386 -m32 -fno-stack-protector"

nasm -f aout ../src/libasm.asm -o libasm.o
nasm -f aout ../src/kstart.asm -o kstart.o
nasm -f aout ../src/loader.asm -o kstart.o
gcc -c ../src/kernel.c -o kernel.o $CFLAGS
gcc -c ../src/libc.c  -o libc.o $CFLAGS
gcc -c ../src/io.c  -o io.o $CFLAGS
gcc -c ../src/string.c  -o string.o $CFLAGS
gcc -c ../src/klib.c  -o klib.o $CFLAGS
gcc -S ../src/klib.c  -o klib.asm $CFLAGS
gcc -c ../src/keyboard.c -o keyboard.o $CFLAGS
gcc -c ../src/shell.c -o shell.o $CFLAGS
gcc -c ../src/screen.c -o screen.o $CFLAGS
gcc -c ../src/cpuid.c -o cpuid.o $CFLAGS
gcc -c ../src/gralprotection.c -o gralprotection.o $CFLAGS
gcc -c ../src/mem.c -o mem.o $CFLAGS
gcc -c ../src/task.c -o task.o $CFLAGS
gcc -c ../src/tty.c -o tty.o $CFLAGS
gcc -c ../src/schedulerPRR.c -o scheduler.o $CFLAGS
ld -T ../src/link.ld -o kernel.bin kernel.o kstart.o libc.o libasm.o io.o string.o klib.o keyboard.o shell.o screen.o cpuid.o gralprotection.o mem.o task.o tty.o scheduler.o -melf_i386
